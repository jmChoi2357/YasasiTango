<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yasashitango.www.mapper.QuizMapper">

<select id="quiz_random" resultType="com.yasasitango.www.vo.TangoVO">
    SELECT 
        kanji,
        korean
    FROM
        yasashi_tango
</select>

<select id="quiz_level" resultType="com.yasasitango.www.vo.TangoVO" parameterType="Integer">
    SELECT 
        kanji,
        korean
    FROM
        yasashi_tango
    WHERE
        word_level = #{word_level}
</select>

<select id="make_question" resultType="com.yasasitango.www.vo.TangoVO" parameterType="String">
    SELECT 
        kanji,
        korean
    FROM
        yasashi_tango
    WHERE
        kanji != #{kanji}
</select>

<select id="make_question_level" resultType="com.yasasitango.www.vo.TangoVO" parameterType="HashMap">
    SELECT 
        kanji,
        korean
    FROM
        yasashi_tango
    WHERE
        kanji != #{kanji}
        AND
        word_level = #{level}
</select>

</mapper>